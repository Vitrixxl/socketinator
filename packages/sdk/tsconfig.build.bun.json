{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/bun/server",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": false,
    "noEmit": false,
    "lib": ["ESNext", "DOM"],
    "types": ["@types/bun"],
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
