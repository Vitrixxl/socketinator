{
  "name": "@socketinator/sdk",
  "version": "1.0.10",
  "description": "Client and server SDK for Socketinator",
  "type": "module",
  "main": "./dist/client/index.js",
  "types": "./dist/client/client/index.d.ts",
  "exports": {
    "./client": {
      "types": "./dist/client/client/index.d.ts",
      "import": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/server/index.d.ts",
      "import": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "server": [
        "dist/server/server/index.d.ts"
      ],
      "client": [
        "dist/client/client/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:server && bun run build:client && bun run build:types",
    "build:server": "bun build server/index.ts --outdir dist/server --target bun --format esm --minify",
    "build:client": "bun build client/index.ts --outdir dist/client --target browser --format esm --minify",
    "build:types": "bun run build:types:server && bun run build:types:client",
    "build:types:server": "tsc --project tsconfig.build.server.json",
    "build:types:client": "tsc --project tsconfig.build.client.json",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "keywords": [
    "socketinator",
    "sdk",
    "client",
    "server",
    "websocket"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  }
}
