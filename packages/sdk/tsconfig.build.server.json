{
  "compilerOptions": {
    "outDir": "./dist/server",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": false,
    "noEmit": false,
    "lib": ["ESNext"],
    "types": ["@types/bun"],
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["server/**/*", "contracts/**/*", "contracts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
